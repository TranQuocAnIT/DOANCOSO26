@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Makaan - Real Estate HTML Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
 

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Layout/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Layout/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="/images/logo1.jpg" />
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Layout/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Layout/css/style.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<style>
    .img-fluid {
        max-width: 100%;
        height: auto
    }
</style>
<body>
   
        
   

    <div class="container-fluid nav-bar bg-transparent">
        <div class="container-fluid bg-dark text-light p-0">
            <div class="row gx-0 d-none d-lg-flex">
                <div class="col-lg-7 px-5 text-start">
                    <div class="h-100 d-inline-flex align-items-center me-4">
                        <small class="fa fa-map-marker-alt text-primary me-2"></small>
                        <small>Thành phố Đà Lạt, Tỉnh Lâm Đồng, Việt Nam</small>
                    </div>
                    <div class="h-100 d-inline-flex align-items-center">
                        <small class="far fa-clock text-primary me-2"></small>
                        <small> Thứ 6 : 09.00 AM </small>
                    </div>
                </div>
                <div class="col-lg-5 px-5 text-end">
                    <div class="h-100 d-inline-flex align-items-center me-4">
                        <small class="fa fa-phone-alt text-primary me-2"></small>
                        <small>+1900 6782</small>
                    </div>
                    <div class="h-100 d-inline-flex align-items-center mx-n2">
                        <a class="btn btn-square btn-link rounded-0 border-0 border-end border-secondary" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-square btn-link rounded-0 border-0 border-end border-secondary" href=""><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-square btn-link rounded-0 border-0 border-end border-secondary" href=""><i class="fab fa-linkedin-in"></i></a>
                        <a class="btn btn-square btn-link rounded-0" href=""><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg bg-white navbar-light py-0 px-4">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center text-center">

                <h1 class="m-0 text-primary">Whe<span style="color: #003366; font-weight: bold;">ely <i class="fas fa-bus-alt"></i></h1>

            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto">
                    <a class="nav-item nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>

                    <a class="nav-item nav-link active" asp-area="" asp-controller="Trip" asp-action="schedule">Lịch trình </a>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Vé của bạn</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a class="dropdown-item" asp-area="" asp-controller="Reservation" asp-action="SearchBooking">Tra cứu vé</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Reservation" asp-action="ViewMyBookings">Lịch sử đặt vé</a>

                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Về chúng tôi</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a href="testimonial.html" class="dropdown-item">Về chúng tôi</a>
                            <a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Chính Sách & Điều khoản </a>
                            <a class="dropdown-item" asp-controller="Home" asp-action="Contact" class="dropdown-item">Liên hệ </a>
                           
                        </div>
                    </div>

                </div>
                @if (!SignInManager.IsSignedIn(User))
                {
                    <a class="btn btn-primary px-3 d-none d-lg-flex" asp-area="Identity" asp-page="/Account/Login">
                        Đăng nhập/Đăng kí
                    </a>
                }
                else
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-item nav-link" asp-area="Admin" asp-controller="Bus" asp-action="Dash">Admin</a>
                        <a class="btn btn-primary px-3 d-none d-lg-flex" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            Đăng xuất
                        </a>
                    }
                    else if (User.IsInRole("Customer"))
                    {
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" style="color: #003366; font-weight: bold;"><i class="fas fa-user-circle" style="font-size: 20px;"></i> TÀI KHOẢN</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a class="dropdown-item" asp-area="" asp-controller="Trip" asp-action="MyProfile">Xem thông tin</a>
                                <a class="dropdown-item" asp-controller="Trip" asp-action="IndexDriverRegis" class="dropdown-item">Đăng kí tài xế</a>

                            </div>
                        </div>
                        <a class="btn btn-primary px-3 d-none d-lg-flex" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            Đăng xuất
                        </a>
                    }
                    else if (User.IsInRole("Driver"))
                    {
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" style="color: #003366; font-weight: bold;"><i class="fas fa-user-circle" style="font-size: 20px;"></i> TÀI KHOẢN</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a class="dropdown-item" asp-area="" asp-controller="Trip" asp-action="MyProfile">Xem thông tin</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Trip" asp-action="ViewMySchedule">Xem lịch trình</a>

                            </div>
                        </div>
                        <a class="btn btn-primary px-3 d-none d-lg-flex" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            Đăng xuất
                        </a>
                    }
                }
            </div>
        </nav>
    </div>

    <div>      @RenderBody()  </div>


    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4" style="font-size: 45px; ">Whe<span style="color: #00B98E; font-weight: bold;">ely</h5>
                    <h5 class="text-white mb-4" style="margin-top: 10px;">CÔNG TY CỔ PHẦN XE KHÁCH WHEELY - BUS LINES</h5>
                    <p class="mb-2" style="color:#fff; font-weight: bold;"><i class="fa fa-map-marker-alt me-3"></i>Địa chỉ: Số 01 Tô Hiến Thành, Phường 3, Thành phố Đà Lạt, Tỉnh Lâm Đồng, Việt Nam</p>
                    <p class="mb-2" style="color:#fff; font-weight: bold;"><i class="fa fa-phone-alt me-3"></i>+012 345 67890</p>
                    <p class="mb-2" style="color:#fff; font-weight: bold;"><i class="fa fa-envelope me-3"></i>Wheely@gmail.com</p>

                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">Truy cập nhanh</h5>
                    <p class="mb-2" style="color:#fff; font-weight: bold;"><i class="fas fa-caret-right"></i> Về chúng tôi </p>
                    <p class="mb-2" style="color:#fff; font-weight: bold;"><i class="fas fa-caret-right"></i> Liên hệ </p>
                    <p class="mb-2" style="color:#fff; font-weight: bold;"><i class="fas fa-caret-right"></i> Các dịch vụ</p>
                    <p class="mb-2" style="color:#fff; font-weight: bold;"><i class="fas fa-caret-right"></i> Điều khoản & chính sách </p>
                    <div class="row ">
                        <img src="/images/sdt.png" />
                    </div>

                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">Các đối tác </h5>
                    <div class="row g-2 pt-2">
                        <div class="col-4">
                            <img class="img-fluid rounded bg-light p-1" src="images/MomoLogo.png" alt="">
                        </div>
                        <div class="col-4">
                            <img class="img-fluid rounded bg-light p-1" src="images/PaypalLogo.jpg" alt="">
                        </div>
                        <div class="col-4">
                            <img class="img-fluid rounded bg-light p-1" src="images/VNpayLogo.jpg" alt="">
                        </div>
                        <div class="col-4">
                            <img class="img-fluid rounded bg-light p-1" src="images/Bus4Layout.jpg" alt="">
                        </div>
                        <div class="col-4">
                            <img class="img-fluid rounded bg-light p-1" src="images/Bus5Layout.jpg" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">Nhận thông báo</h5>
                    <p class="mb-2" style="color:#fff;"> Để lại Email của bạn để nhận được thông báo từ Wheely</p>
                    <div class="position-relative mx-auto" style="max-width: 400px;">
                        <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="text" placeholder="Email của bạn  ">
                        <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">Summit</button>
                    </div>
                    <h5 class="text-white mb-4" style="margin-top: 10px;">Kết nối với chúng tôi</h5>
                    <div class=" row ">
                        <a class="btn btn-outline-light btn-social" style="background-color: #fff;" href=""><i class="fab fa-twitter" style="color:#4cc9f0;"></i></a>
                        <a class="btn btn-outline-light btn-social" style="background-color: #3a86ff" href=""><i class="fab fa-facebook-f" style="color:#fff;"></i></a>
                        <a class="btn btn-outline-light btn-social" style="background-color: #fff" href=""><i class="fab fa-youtube" style="color:red;"></i></a>
                        <a class="btn btn-outline-light btn-social" style="background-color: #4cc9f0" href=""><i class="fab fa-linkedin-in" style="color:#fff;"></i></a>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </footer>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Layout/lib/wow/wow.min.js"></script>
    <script src="~/Layout/lib/easing/easing.min.js"></script>
    <script src="~/Layout/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Layout/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
