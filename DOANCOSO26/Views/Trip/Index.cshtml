    <script>
            function validateForm(event) {
            // Prevent form submission
            event.preventDefault();

            // Get form fields
            const start = document.getElementById('start');
            const end = document.getElementById('end');
            const departureDate = document.getElementById('departureDate');
            const seatsRequired = document.getElementById('seatsRequired');

            // Check if at least one field is filled
            if (start.value.trim() === '' && end.value.trim() === '' && departureDate.value.trim() === '' && seatsRequired.value.trim() === '') {
                alert('Vui lòng điền ít nhất một trường.');
            } else {
                // If at least one field is filled, submit the form
                event.target.submit();
            }
        }
    </script>


