@{
    var searchResults = ViewBag.SearchResults as IEnumerable<DOANCOSO26.Models.BusTrip>;
    var searchedDate = DateTime.Now;
}

<head>
    <meta charset="utf-8">
    <title>Makaan - Real Estate HTML Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
</head>
<style>
    .horizontal-line {
        display: flex;
        align-items: center;
    }

        .horizontal-line div {
            margin: 0 10px; /* Khoảng cách giữa các phần tử */
        }

    .line {
        flex-grow: 1;
        border-bottom: 1px solid black;
        margin: 0 10px; /* Khoảng cách giữa các đoạn gạch ngang */
    }


    .property-item.selected {
        border: 2px solid #2ec4b6;
        background-color: #cbf3f0;
    }

    .custom-radio {
        position: relative;
        display: flex;
        align-items: center;
        cursor: pointer;
        font-size: 13px;
        font-weight: bold;
        color: #333;
    }

        .custom-radio input[type="radio"] {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

    .radio-label {
        padding: 10px 15px;
        border: 2px solid #2ec4b6;
        border-radius: 15px;
        transition: background-color 0.3s, color 0.3s;
    }

    .custom-radio input[type="radio"]:checked ~ .radio-label {
        background-color: #06d6a0;
        color: white;
    }

    .custom-radio .radio-label:hover {
        background-color: #c7f9cc;
        color: white;
    }

    .center-image {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
<div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
    <div class="container">
        <div class="d-block h5 mb-2" style="font-weight: bold; font-size: 18px">Tìm chuyến ngay</div>
        <form asp-action="Search" onsubmit="validateForm(event)">
            <div class="row g-2">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <input type="text" id="start" class="form-control border-0 py-3" name="Start" placeholder="Điểm đi">
                        </div>
                        <div class="col-md-3">
                            <input type="text" id="end" class="form-control border-0 py-3" name="End" placeholder="Điểm đến">
                        </div>
                        <div class="col-md-3">
                            <input type="date" id="departureDate" class="form-control border-0 py-3" name="DepartureDate" placeholder="Ngày đi" min="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-3">
                            <input type="number" id="seatsRequired" class="form-control border-0 py-3" name="SeatsRequired" placeholder="Số ghế cần đặt">
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-dark border-0 w-100 py-3" type="submit">Search</button>
                </div>
            </div>
        </form>

    </div>
</div>

<div class="container mt-5">





    <div class="d-block h5 mb-2" style="font-weight: bold; font-size: 20px; padding-bottom: 20px; ">Các chuyến phù hợp với tìm kiếm của bạn : </div>
    @if (searchResults != null && searchResults.Any())
    {
        <div class="row">
            <div class="col-lg-3 col-md-2 wow fadeInUp custom-col" data-wow-delay="0.1s">
                <div class="property-item rounded overflow-hidden p-4">
                    <div class="position-relative overflow-hidden">
                        <h4 class="text-center mb-4" style="background-color: #003366; color: white; padding: 10px; border-radius: 10px;">Bộ lọc tìm kiếm </h4>

                        <!-- Loại xe -->
                        <div class="mb-3">
                            <h6>Loại xe</h6>
                            <div>
                                <input type="checkbox" id="loai-xe-1" name="loai-xe" value="Limousine">
                                <label for="loai-xe-1">Limousine</label>
                            </div>
                            <div>
                                <input type="checkbox" id="loai-xe-2" name="loai-xe" value="Standard">
                                <label for="loai-xe-2">Standard</label>
                            </div>
                        </div>

                        <!-- Số ghế trống -->
                        <div class="mb-3">
                            <h6>Số ghế trống</h6>
                            <input type="range" id="so-ghe-trong" name="so-ghe-trong" min="0" max="50" value="1" onchange="updateSeatsLabel(this.value)">
                            <label for="so-ghe-trong">Ít nhất <span id="so-ghe-trong-label">1</span> ghế</label>
                        </div>

                        <!-- Giá vé -->
                        <div class="mb-3">
                            <h6>Giá vé</h6>
                            <input type="range" id="gia-ve" name="gia-ve" min="0" max="1000000" step="10000" value="500000" onchange="updatePriceLabel(this.value)">
                            <label for="gia-ve">Tối đa <span id="gia-ve-label">500,000</span> VND</label>
                        </div>

                        <!-- Thời gian khởi hành -->
                        <div class="mb-3">
                            <h6>Thời gian khởi hành</h6>
                            <select id="thoi-gian-khoi-hanh" name="thoi-gian-khoi-hanh" class="form-select">
                                <option value="">Tất cả</option>
                                <option value="morning">Buổi sáng (06:00 - 12:00)</option>
                                <option value="afternoon">Buổi chiều (12:00 - 18:00)</option>
                                <option value="evening">Buổi tối (18:00 - 24:00)</option>
                                <option value="night">Ban đêm (00:00 - 06:00)</option>
                            </select>
                        </div>



                        <button class="btn btn-primary w-100" onclick="applyFilters()">Xóa bộ lọc</button>
                    </div>
                </div>
            </div>

            <div class="col-lg-9 col-md-10 wow fadeInUp custom-col" data-wow-delay="0.1s">
                <div class="radio-buttons-container" style="display: flex; justify-content: center; gap: 10px; margin-bottom: 20px;">
                    @for (int i = -3; i <= 3; i++)
                    {
                        var date = searchedDate.AddDays(i);
                        <label class="custom-radio">
                            <input type="radio" name="date" value="@date.ToString("yyyy-MM-dd")" @(i == 0 ? "checked" : "")>
                            <span class="radio-label">@date.ToString("dd/MM")</span>
                        </label>
                    }
                </div>
                @foreach (var item in searchResults)
                {

                    <div class="property-item rounded overflow-hidden position-relative" style="margin-bottom: 20px;" onclick="selectItem(this)">
                        <div class="position-absolute top-0 start-0 m-3">
                            <button class="btn btn-primary">@item.Bus.Company</button>
                        </div>
                        <div class="row">
                            <div class="col-3 d-flex justify-content-center align-items-center">
                                <div class=" text-center border-end">
                                    <img src="@item.ImageUrl" class="img-fluid" />
                                </div>
                            </div>
                            <div class="col-9">
                                <div class="p-4 pb-0">
                                    <div class="horizontal-line d-flex align-items-center justify-content-between">
                                        <div class="text-center">
                                            <div class="text-primary" style="font-weight: bold; font-size: 22px;">@item.DepartureTime.ToString("hh:mm ")</div>
                                            <div class="d-block h5 mb-2" style="font-weight: bold; font-size: 18px">@item.BusRoute.Start</div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-dot-circle" style="font-weight: bold; font-size: 18px; color: green; margin: 0 10px;"></i>
                                            <div class="line" style="width: 50px; height: 2px; background-color: #ddd;"></div>
                                            <div class="text-primary mb-3" style="margin: 0 10px;">(@item.BusRoute.Time)</div>
                                            <div class="line" style="width: 50px; height: 2px; background-color: #ddd;"></div>
                                            <i class="fas fa-map-marker-alt" style="font-weight: bold; font-size: 18px; color: red; margin: 0 10px;"></i>
                                        </div>
                                        <div class="text-center">
                                            <div class="text-primary" style="font-weight: bold; font-size: 22px;">@item.DepartureTime.ToString("hh:mm ")</div>
                                            <div class="d-block h5 mb-2" style="font-weight: bold; font-size: 18px">@item.BusRoute.End</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2" style="font-weight: bold; font-size: 15px"><i class="fas fa-bus"></i> Loại xe: @item.Bus.BusType</small>
                                    <small class="flex-fill text-center border-end py-2" style="font-weight: bold; font-size: 15px"><i class="fas fa-couch"></i> Số ghế trống: @item.GetAvailableSeats()</small>
                                    <small class="flex-fill text-center border-end py-2" style="font-weight: bold; font-size: 15px"><i class="fas fa-dollar-sign"></i> @item.BusRoute.Price</small>
                                    <small class="flex-fill text-center py-2"><a class="btn btn-dark border-0" asp-area="" asp-controller="Trip" asp-action="Display" asp-route-id="@item.Id">chọn chuyến</a></small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container text-center">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <i class="far fa-sad-tear display-1 text-primary"></i>

                        <h1 class="display-1">500</h1>
                        <h1 class="mb-4">Không tìm thấy chuyến</h1>
                        <p class="mb-4">Chúng tôi rất tiếc, hãy điều chỉnh lại thông tin tìm kiếm nhé hoặc quay về trang chủ</p>
                        <a class="btn btn-primary py-3 px-5" href="">Go Back To Home</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</div>
<script>
    function selectItem(element) {
        // Remove 'selected' class from any previously selected item
        const previouslySelected = document.querySelector('.property-item.selected');
        if (previouslySelected) {
            previouslySelected.classList.remove('selected');
        }

        // Add 'selected' class to the clicked item
        element.classList.add('selected');
    }
</script>
<script>
    function validateForm(event) {
        // Prevent form submission
        event.preventDefault();

        // Get form fields
        const start = document.getElementById('start');
        const end = document.getElementById('end');
        const departureDate = document.getElementById('departureDate');
        const seatsRequired = document.getElementById('seatsRequired');

        // Check if at least one field is filled
        if (start.value.trim() === '' && end.value.trim() === '' && departureDate.value.trim() === '' && seatsRequired.value.trim() === '') {
            alert('Vui lòng điền ít nhất một trường.');
        } else {
            // If at least one field is filled, submit the form
            event.target.submit();
        }
    }
</script>
