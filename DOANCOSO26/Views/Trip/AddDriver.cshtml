@model DOANCOSO26.Models.Driverregis
@{
    ViewData["Title"] = "Thêm Tài xế mới";
}


<div class="container-fluid header bg-white ">
    <div class="row g-0 align-items-center flex-column-reverse flex-md-row">
        <div class="col-md-6 p-5 mt-lg-5">
            <h1 class="display-5 animated fadeIn mb-4"> HÃY TRỞ THÀNH MỘT THÀNH VIÊN TRONG GIA ĐÌNH WHEELY </h1>
            <nav aria-label="breadcrumb animated fadeIn">
                <ol class="breadcrumb text-uppercase">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Pages</a></li>
                    <li class="breadcrumb-item text-body active" aria-current="page">Đăng kí tài xế </li>
                </ol>
            </nav>
        </div>
        <div class="col-md-6 animated fadeIn">
            <img class="img-fluid" src="~/images/Bus4Layout.jpg" alt="">
        </div>
    </div>
</div>
<div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
</div>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Lỗi!</strong> Vui lòng sửa các lỗi sau đây:
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<div class="col-lg-12 quote-text py-5 wow fadeIn" data-wow-delay="0.5s">
    <div class="p-lg-5 pe-lg-0">
        <div class="section-title text-start">
            <h1 class="display-5 mb-4">PHIẾU ĐĂNG KÍ TÀI XẾ  </h1>
        </div>
        <p class="mb-4 pb-2">Hãy trở thành một mảnh trong bức tranh tuyệt với cùng Wheely nhé</p>
        <h1 class="mb-3 text-center ">Form điền thông tin đăng kí tài xế </h1>
        <p class="text-white mb-0">Cùng Wheely bắt đầu hành trinh tuyệt vời nào !!!</p>
        <form asp-action="AddDriver" method="post" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-12 col-sm-6">
                    <label asp-for="FullName">Họ và Tên</label>
                    <input asp-for="FullName" type="text" class="form-control " placeholder="Your Name" style="height: 55px;">
                </div>
                <div class="col-12 col-sm-6">
                    <label asp-for="DateOfBirth">Ngày Sinh</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control " placeholder="Your Date of Birth " style="height: 55px;">
                </div>
                <div class="col-12 col-sm-6">
                    <label asp-for="PhoneNumber">Số điện thoại</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control " placeholder="Your Mobile" style="height: 55px;">
                </div>
                <div class="col-12 col-sm-6">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="text" class="form-control " placeholder="Your Email" style="height: 55px;">
                </div>
                <div class="col-12 ">
                    <label asp-for="Address">Địa chỉ</label>
                    <input asp-for="Address" type="text" class="form-control " placeholder="Your Address" style="height: 55px;">
                </div>
                <div class="col-12 ">
                    <label asp-for="CCCDNumber">Số CCCD/CMND</label>
                    <input asp-for="CCCDNumber" type="text"  class="form-control " placeholder="Your Address" style="height: 55px;">
                </div>
                <div class="col-12 col-sm-6">
                    <label>Ảnh mặt trước CCCD/CMND</label>
                    <input asp-for="CCCD1ImageUrl" type="file" name="CCCD1imageUrl" class="form-control-file" />
                </div>

                <div class="col-12 col-sm-6">
                    <label>Ảnh mặt sau CCCD/CMND</label>
                    <input asp-for="CCCD2ImageUrl" type="file" name="CCCD2imageUrl" multiple class="form-control-file" />
                </div>
                <div class="col-12 ">
                    <label asp-for="LicenseNumber">Số Giấy phép lái xe</label>
                    <input asp-for="LicenseNumber" type="text" class="form-control " placeholder="License Number" style="height: 55px;">
                </div>
                <div class="col-12">
                    <label asp-for="LicenseIssuingAuthority">Cơ quan cấp GPLX</label>
                    <input asp-for="LicenseIssuingAuthority" type="text" class="form-control " placeholder="License Issuing Authority " style="height: 55px;">
                </div>
                <div class="col-12 col-sm-6 ">
                    <label asp-for="LicenseIssueDate">Ngày cấp GPLX</label>
                    <input asp-for="LicenseIssueDate" type="date" class="form-control " placeholder="" style="height: 55px;">
                </div>
                <div class="col-12 col-sm-6 ">
                    <label asp-for="LicenseExpiryDate">Ngày hết hạn GPLX</label>
                    <input asp-for="LicenseExpiryDate" type="date" class="form-control " placeholder="" style="height: 55px;">
                </div>
                <div class="col-12 col-sm-6">
                    <label>Ảnh mặt trước GPLX</label>
                    <input asp-for="GPLX1ImageUrl" type="file" name="GPLX1imageUrl" class="form-control-file" />
                </div>

                <div class="col-12 col-sm-6">
                    <label>Ảnh mặt sau GPLX</label>
                    <input asp-for="GPLX2ImageUrl" type="file" name="GPLX2imageUrl" multiple class="form-control-file" />
                </div>
                <div class="col-12 ">
                    <button class="btn btn-primary w-100 py-3" type="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

