@model DOANCOSO26.Models.Booking
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager




<body>

    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        
        <!-- Spinner End -->





        <!-- Header Start -->
        <div class="container-fluid header bg-white p-0">
            <div class="row g-0 align-items-center flex-column-reverse flex-md-row">
                <div class="col-md-6 p-5 mt-lg-5">
                    <h1 class="display-5 animated fadeIn mb-4">TRA CỨU VÉ XE </h1> 
                        <nav aria-label="breadcrumb animated fadeIn">
                        <ol class="breadcrumb text-uppercase">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Pages</a></li>
                            <li class="breadcrumb-item text-body active" aria-current="page">Tra cứu</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-md-6 animated fadeIn">
                    <img class="img-fluid" src="~/images/Bus4Layout.jpg" alt="">
                </div>
            </div>
        </div>
        <!-- Header End -->
       

        <!-- Search Start -->
        @using (Html.BeginForm("SearchBooking", "Reservation", FormMethod.Post))
        {
            <div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
                <div class="container">
                    <div class="row g-2">
                        <div class="col-md-10">
                            <div class="row g-2">
                                <div class="col-md-12">
                                    @Html.TextBox("invoiceCode", null, new { @class = "form-control border-0 py-3", placeholder = "Nhập mã vé" })
                                    @Html.ValidationMessageFor(model => model.InvoiceCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-dark border-0 w-100 py-3">Tra cứu vé</button>
                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- Search End -->

        <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container text-center">
                <div class="row justify-content-center">
                    <div class="col-lg-6">

                        <h1 class="mb-4">Vui lòng nhập mã xe cần tra cứu</h1>
                        <p class="mb-4">Cam kết mang đến cho bạn trải nghiệm đặt vé xe hoàn hảo kết nối và trải nghiệm không ngừng</p>
                        <a class="btn btn-primary py-3 px-5" href="">Go Back To Home</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- 404 Start -->
        
        <!-- 404 End -->
        
        <!-- Footer End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
   
    <!-- JavaScript Libraries -->
    
</body>

</html>